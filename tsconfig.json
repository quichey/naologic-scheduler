{
  "compilerOptions": {
    "target": "esnext",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    /* Added Fixes Below */
    "verbatimModuleSyntax": true,   // Forces 'import type' and explicit extensions
    "isolatedModules": true         // Ensures compatibility with modern transpilers (like esbuild/tsx)
  },
  "include": ["src/**/*"]
}